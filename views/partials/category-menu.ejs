<div class="list-group">
    <a href="/persons" class="list-group-item list-group-item-action"> Hepsini Görüntüle  </a>
    <% categories.forEach(function(category) { %>
        <a href="/persons/category/<%= category.url %>" 
            class="list-group-item list-group-item-action <%= selectedCategory == category.url ? 'active': '' %> "> 
            <%= category.name %>  
        </a>
    <% }) %> 
</div>